{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "out": "built/bundled.js",
    "rootDir": "src",
    "sourceMap": false
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "files": [
    "src/index.ts",
    "src/main.ts",
    "typings/angularjs/angular.d.ts",
    "typings/jquery/jquery.d.ts",
    "typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "buildOnSave": true
}
