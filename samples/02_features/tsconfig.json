{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "suppressExcessPropertyErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "01_basics.ts",
        "02_enums.ts",
        "03_casting.ts",
        "04_interfaces.ts",
        "05_functions.ts",
        "06_classes.ts",
        "07_decorated.ts",
        "08_namespaces.ts",
        "destructuring.ts",
        "generics-2.ts",
        "generics.ts",
        "motivation-solved.ts"
    ],
    "exclude": []
}
